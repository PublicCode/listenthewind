@using System.Configuration;
@model WebModel.Account.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<div class="divLoginBody">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td style="width: 450px;">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "loginTBox watermark", @watermark = "User Name", @title = "User name in system" })
                    <br />
                    @Html.ValidationMessageFor(m => m.UserName)
                    <br />
                    <br />
                    @Html.PasswordFor(m => m.Pwd, new { @class = "loginTBox watermark", @watermark = "Password", @title = "Password in system" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Pwd)
                </td>
            </tr>
            <tr>
                <td colspan="2" style="color: #FF0000; font-weight: normal;">
                    @Html.ValidationSummary(true, "")
                </td>
            </tr>
            <tr>
                <td style="text-align: right; padding-right: 40px;">
                    <input type="submit" value="Sign In" class="SinInBtn" onclick ="t2v_main.Login()"/>
                </td>
                <td>&nbsp;</td>
            </tr>
        </table>
</div>
