@using Newtonsoft.Json
@{
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/T2VBusiness/ApprovalCamp/ApprovalCamp.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/T2VBusiness/ApprovalCamp/ApprovalCamp_Ang.js")" type="text/javascript"></script>
<div class="container" ng-controller="ApprovalCampList">
    <h1 class="tit1">个人信息</h1>
    <div class="w890 clear">
        <div class="info-left">
            <div class="user-link">
                <h2>链接</h2>
                <ul>
                    <li><a href="#">营地管理</a></li>
                    <!-- 添加crr选中-->
                </ul>
            </div>
        </div>
        <div class="info-right">
            <div class="f_dd_cet clear g_dd_cet" style="background-color:#fff; margin-bottom:20px; width:642px;">
                <div class="f_dd_lt">
                    <ul>
                        <li ng-repeat="c in apCamp.rows">
                            <div class="f_dd_lt_top clear">
                                <div class="f_dd_tit" style="width:565px">
                                    <div class="f_dd_lt_con">
                                        <span>营地编号： {{c.CampName}}</span>
                                    </div>
                                </div>
                                <button class="f_btns">营地详情</button>
                            </div>
                            <div class="f_dd_lt_sw clear">
                                <div class="f_sw_left">
                                    <img src="../../UploadImg/Camp/{{c.CampPhoto}}" />
                                </div>
                                <div class="f_sw_right">
                                    <div class="f_sw_tit">
                                        <span>营地编号 ：{{c.CampName}}</span>
                                        <div class="f_sw_state">状态：{{c.ApprovalStatus}}</div>
                                    </div>
                                    <div class="f_sw_time clear" ng-show="c.ApprovalStatus == '拒绝'">
                                        <span>拒绝原因：</span> {{c.RejectReason}}
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li style="border-bottom:0px">
                            <div class="page_con" style="width:210px">
                        	    &nbsp;共{{apCamp.records}}记录 {{apCamp.page}}/{{apCamp.total}}页 
                                <div class="last">
                                    <a href="javascript:void(0)" ng-click="lastPage()">上一页</a>
                                </div>
                                <div class="next">
                                    <a href="javascript:void(0)" ng-click="nextPage()">下一页</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>
<script type="text/javascript">
    ApprovalCamp.lstInfo = @Html.Raw(JsonConvert.SerializeObject(ViewBag.lstObj));
    angular.element(document).ready(function () {
        angular.bootstrap($('body'), ['SO']);
    });
</script>