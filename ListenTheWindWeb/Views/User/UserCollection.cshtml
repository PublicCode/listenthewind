@{
    Layout = null;
}
@using Newtonsoft.Json

<div class="info-dd-list clear w652"  id="ng-value" ng-controller="UserCollectionCtrl">
                	<h2>我的收藏</h2>
                         <div class="choice-right">
                            <ul class="chl-list">
                                <li ng-repeat="info in campcollectobj.campcollect">
                                	<a href="javascript:void(0)" class="f_chl_close" ng-click="DeleteCampCollect($index)">x</a>
                                    <div class="chl-img">
                                        <img src="../../UploadImg/Camp/{{info.CampPhoto}}">
                                    </div>
                                    <h2>{{ info.CampName }}</h2>
                                    <div class="chl-jg clear">
                                        <h3 >￥:{{info.PilePrice}}</h3>
                                        <div class="x-bg-con" ng-bind-html="info.CampLevel | toCampLevel">

                                        </div>
                                    </div>
                                    <div class="chl-txt">
                                        <span ng-bind="info.CampIntro | ellipsis15" title="{{info.CampIntro}}"></span>
                                    </div>
                                    <div class="chl-icon clear">
                                        <a href="#" ng-repeat="campitem in info.Listcampitem | orderBy:predicate">
                                            <img title="{{campitem.CampItemName}}" style="width:16px; height:16px" ng-show="$index < 3" src="../../Content/images/{{campitem.CampItemIcon}}" />
                                        </a>
                                    </div>
                                    <div class="chl-avt">
                                        <img src="../../Content/images/avt.png" />
                                    </div>
                                    <a href="/Home/CampDetail?CampID={{info.CampID}}" class="chl-btn">查看更多信息</a>
                                </li>
                            </ul>
                        </div>
                </div>
<script type="text/javascript">
    UserCollect.campcollectobj = @Html.Raw(JsonConvert.SerializeObject(ViewBag.CampCollectByUser));
    angular.element(document).ready(function () {
        angular.bootstrap($('body'), ['SO']);
    });
</script>