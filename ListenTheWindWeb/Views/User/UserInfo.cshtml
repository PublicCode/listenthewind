@{
    Layout = null;
}
@using Newtonsoft.Json
<div id="ng-value" ng-controller="UserInfoCtrl">
    <div class="info-dd-list">
                	<h2>验证我的身份 <a href="javascript:void(0)" class="open-guan">开关</a></h2>
                  <div class="height-auto">
                    <div class="yz-content">
                    	<h3>风客身份已验证。</h3>
                        <p>在听风营中建立信任，最简单的方法就是获得您的“听风营身份”。我们通过匹配您的在线帐号信息
和正式身份证明来验证您的身份。<a href="#" class="orange">了解更多</a></p>
                    </div>
                    <div class="yes-info" style="display:none">
                    	<ul>
                        	<li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                        </ul>
                    </div>
                    <a href="#" class="lv-x dark-blue">更多身份证验证</a>
                  </div>
                </div>
               	<div class="info-dd-list">
                  <h2>账号信息<a href="javascript:void(0)" class="open-guan">开关</a></h2>
                  <div class="height-auto">
                    <div class="input-content">
                    	<ul class="input-list-txt">
                        	<li class="clear">
                            	<label>用户名:</label><input type="text" ng-model="UserAllInfoObj.usermodel.UserName" disabled="disabled" readonly="readonly"/>
                            </li>
                            <li class="clear">
                            	<label>电子邮箱:</label><input type="text" ng-model="UserAllInfoObj.usermodel.Email" id="mail"  ng-disabled="UserAllInfoObj.usermodel.MailFlag == 1"/><span><strong ng-show="UserAllInfoObj.usermodel.MailFlag == 1">已认证</strong><a href="javascript:void(0)" class="f_wlz" id="f_wlz_ml" ng-show="UserAllInfoObj.usermodel.MailFlag != 1">未认证</a></span>
                            </li>
                            <li class="clear">
                            	<label>手机号:</label><input type="text" ng-model="UserAllInfoObj.usermodel.Mobile"  ng-disabled="UserAllInfoObj.usermodel.MobileFlag == 1" id="phone" /><span><strong ng-show="UserAllInfoObj.usermodel.MobileFlag == 1">已认证</strong><a href="javascript:void(0)" class="f_wlz" id="f_wlz_mb" ng-show="UserAllInfoObj.usermodel.MobileFlag != 1">未认证</a></span>
                            </li>
                        </ul>
                    </div>
                      <button class="f_btns" style="float:right; margin-right:43px" ng-click="saveUserAuthInfo()" ng-show="UserAllInfoObj.usermodel.MailFlag != 1 || UserAllInfoObj.usermodel.MobileFlag != 1">信息确认</button>
                  </div>
                </div> 
                <div class="info-dd-list">
                  <h2>个人信息<a href="javascript:void(0)" class="open-guan">开关</a></h2> 
                  <div class="height-auto">
                    <div class="input-content">
                    	<ul class="input-list-txt">
                        	<li class="clear">
                                <label>性别:</label>
                            	<select ng-model="UserAllInfoObj.usermodel.Sex">
                                    <option value="">请选择</option>
                                    <option value="1">男</option>
                                    <option value="2">女</option>
                            	</select>
                            </li>
                            <li class="clear">
                            	<label>出生年月:</label>
                                <input type="text" data-ng-model="UserAllInfoObj.usermodel.Birth" x-datepicker   value="YY/MM/DD" />
                            </li>
                            
                            <li class="clear">
                            	 <label>自我介绍:</label>
                                 <div class="textarea-con">
                                     <textarea placeholder="自我介绍" ng-model="UserAllInfoObj.usermodel.Intro">自我介绍</textarea>
                                 </div>
                            </li>
                            
                        </ul>
                    </div>
                      <button class="f_btns" style="float:right; margin-right:43px" ng-click="saveUserBasicInfo()">信息确认</button>
                  </div>
                </div> 
                <div class="info-dd-list">
                  <h2>身份证明<a href="javascript:void(0)" class="open-guan">开关</a></h2>  
                  <div class="height-auto">
                    <div class="input-content">
                    	<ul class="input-list-txt">
                        	<li class="clear">
                            	<label>真实姓名:</label><input type="text" class="user-wt" ng-model="UserAllInfoObj.usermodel.Name" required placeholder="请输入你的真实姓名"/>
                            </li>
                            <li class="clear">
                            	<label>身份证号:</label><input type="text" class="user-wt" ng-model="UserAllInfoObj.usermodel.IDNumber" required placeholder="请输入你的身份证号码"/>
                            </li>
                            <li class="clear">
                            	<div class="f_avt_img_con clear">
                                	<strong>手持身份证照片：</strong>
                                    <div class="f_avt_img_btn">
                                    	<div class="f_avt_img_top">
                                            <img ng-src="../../UploadImg/{{UserAllInfoObj.usermodel.IDNumberImg1}}" style="width:170px; height:94px" ng-show="UserAllInfoObj.usermodel.IDNumberImg1 != null" />
                                        </div>
                                        <div id="fine-uploader-left1" style="height: 29px;width: 141px;margin:0; float:left"></div>
                                    </div>
                                </div>
                                <div class="f_avt_img_con clear">
                                	<strong>正面身份证照片：</strong>
                                    <div class="f_avt_img_btn">
                                    	<div class="f_avt_img_top">
                                            <img ng-src="../../UploadImg/{{UserAllInfoObj.usermodel.IDNumberImg2}}" style="width:170px; height:94px" ng-show="UserAllInfoObj.usermodel.IDNumberImg2 != null" />
                                        </div>
                                        <div id="fine-uploader-left2" style="height: 29px;width: 141px;margin:0; float:left"></div>
                                    </div>
                                </div>
                                <div class="f_sl"></div>
                            </li>
                        </ul>
                    </div>
                    <button class="f_btns" style="float:right; margin-right:43px" ng-click="saveIDNumberInfo()" ng-show="UserAllInfoObj.usermodel.IDNumberFlag != 1">信息确认</button>
                  </div>
                </div>   
</div>
<script type="text/javascript">
    UserCollect.UserAllInfoObj = @Html.Raw(JsonConvert.SerializeObject(ViewBag.UserAllInfo));
    angular.element(document).ready(function () {
        angular.bootstrap($('body'), ['SO']);
    });
</script>