@using Newtonsoft.Json
@{
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/T2VBusiness/User/UserCollect.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/T2VBusiness/User/UserCollectAng.js")" type="text/javascript"></script>
<div class="container" ng-controller="AssignManagerForCampCtrl">
    <h1 class="tit1">个人信息</h1>
    <div class="w890 clear">
        <div class="info-left">
            <div class="user-link">
                <h2>链接</h2>
                <ul>
                    <li><a href="/User/UserManagement">用户管理</a></li>
                    <li><a href="/User/AssignManager">分配营地管理员</a></li>
                    <!-- 添加crr选中-->
                </ul>
            </div>
        </div>
        <div class="info-right">
            <div class="f_dd_cet clear g_dd_cet" style="background-color: #fff; margin-bottom: 20px; width: 642px;">
                <div class="f_dd_lt">
                    <ul>
                        <li ng-repeat="c in campList">
                            <div class="f_dd_lt_top clear">
                                <div class="f_dd_tit" style="width: 545px">
                                    <div class="f_dd_lt_con">
                                        <span>营地名： {{c.CampName}}</span>
                                    </div>
                                </div>
                                <a href="javascript:void(0)">
                                    <button class="f_btns" ng-click="assignManagerForCamp($index)">分配管理员</button>
                                </a>
                            </div>
                            <div class="f_dd_lt_sw clear">
                                <div class="f_sw_left">
                                    <img src="../../UploadImg/Camp/{{c.CampPhoto}}" />
                                </div>
                                <div class="f_sw_right">
                                    <div class="f_sw_tit">
                                        <span>营地编号：{{c.CampNum}}</span>
                                         <br />
                                        <span>管理员：{{c.ManagedByName}}</span>
                                        <br />
                                        <span>营地介绍 : {{c.CampIntro}}</span>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li style="border-bottom: 0px">
                            <div class="page_con" style="width: 210px">
                                &nbsp;共{{totalRecord}}记录 {{currentPage}}/{{totalPages}}页 
                                <div class="last">
                                    <a href="javascript:void(0)" ng-click="prevPage()">上一页</a>
                                </div>
                                <div class="next">
                                    <a href="javascript:void(0)" ng-click="nextPage()">下一页</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <br />
        </div>
    </div>
        <div id="divCampAssign" class="modal hide">
        <div class="modal-header" style="background-color: #9E9500;">
            <div style="text-align: left; font-weight: bold;">
                <button type="button" style="float: right; padding: 0 10px" class="DeleteLine" data-dismiss="modal">
                    X
                </button>
                <span style="font-size: 18px;">分配管理员 &nbsp;&nbsp;</span>
            </div>
        </div>
        <div class="show">
               <label>管理员</label>
                <div class="select-con sel-cs">
                    <select ng-model="myManager" ng-options="manager.UserName for manager in managerList" style="color:#333">
                        <option style="display:none; color:gray" value="" disabled selected>请选择一个管理员</option>
                    </select>
                </div>
            <div style="text-align:center">
                        <input type="button" class="f_btns" ng-click="chooseThisManager()" value="确定选择"/>
           </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    angular.element(document).ready(function () {
        angular.bootstrap($('body'), ['SO']);
    });
</script>
