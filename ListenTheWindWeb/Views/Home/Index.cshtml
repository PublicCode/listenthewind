@using Newtonsoft.Json
<script src="@Url.Content("~/Scripts/T2VBusiness/Home/t2v_HomeIndex.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/T2VBusiness/Home/t2v_HomeIndex_angular.js")" type="text/javascript"></script>

<div class="container" id="ng-value" ng-controller="HomeIndexCtrl">
    <div class="home-con">
        <div class="home-top clear">
            @*@using (Ajax.BeginForm("ReleaseNote", "Home", null, new AjaxOptions { UpdateTargetId = "ReleaseNote", HttpMethod = "Post", OnSuccess = "" }))*@
            @using (Html.BeginForm("ReleaseNote", "Home"))
            {
            <div class="home-set">
                <label>城市</label>
                <div class="select-con sel-cs">
                    <select ng-model="myCity" ng-options="city.CityName for city in hi" required ng-change="ChangeCity()">
                    </select>
                </div>
            </div>
            <div class="home-set">
                <label>景点</label>
                <div class="select-con sel-cs" id="home-city">
                    <select ng-model="myLoc" ng-options="lo.LocationName for lo in locLst">
                    </select>
                </div>
            </div>
            <div class="home-set">
                <label>入营时间：</label>
                <div class="time-input">
                    <input type="text" id="datepicker1" value="" />
                </div>
            </div>
            <div class="home-set">
                <label>退营日期：</label>
                <div class="time-input">
                    <input type="text" id="datepicker2" value="" readonly disabled="disabled" />
                </div>
            </div>
            <div class="home-number">
                <label>成人：</label>
                <div class="select-con sel-number">
                    <span>1</span>
                    <select>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <div class="home-number">
                <label>儿童：</label>
                <div class="select-con sel-number">
                    <span>1</span>
                    <select>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <input type="hidden" id="param" name="param" value="" />
            <input type="submit" ng-click="SearchCamp()" class="btn-search" value="搜 索"/>
            }
        </div>
        <div class="home-txt">
            <h1>开创您的专属听风营·强大的旅行之心Create your exclusive camp listening to the wind, strong heart of travel</h1>
        </div>
        <div class="home-list-img clear">
            <ul>
                <li>
                    <a href="#">
                        <span>
                            <img src="../../Content/images/list_tit1.png" /></span>
                        <img src="../../Content/images/hlist_img1.jpg" />
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span style="display: none">
                            <img src="../../Content/images/list_tit1.png" /></span>
                        <img src="../../Content/images/hlist_img2.jpg" />
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span style="display: none">
                            <img src="../../Content/images/list_tit1.png" /></span>
                        <img src="../../Content/images/hlist_img3.jpg" />
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span style="display: none">
                            <img src="../../Content/images/list_tit1.png" /></span>
                        <img src="../../Content/images/hlist_img4.jpg" />
                    </a>
                </li>
            </ul>
            <div class="sl-line"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    t2v_HomeIndex.hiInfo = @Html.Raw(JsonConvert.SerializeObject(ViewBag.CityInfo));
    angular.element(document).ready(function () {
        angular.bootstrap($('body'), ['SO']);
    });
</script>